{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "TFH Docs",
    "colors": {
        "primary": "#000000",
        "dark": "#000",
        "light": "#fff"
    },
    "logo": {
        "light": "/images/tfh-logo.svg",
        "dark": "/images/tfh-logo-dark.svg"
    },
    "navigation": {
        "global": {
            "anchors": [
                {
                    "anchor": "World ID",
                    "href": "https://docs.world.org/world-id",
                    "icon": "/images/world-id-icon.svg"
                },
                {
                    "anchor": "World Chain",
                    "href": "https://docs.world.org/world-chain",
                    "icon": "/images/world-chain-icon.svg"
                }
            ]
        },
        "tabs": [
            {
                "tab": "Home",
                "pages": [
                    "pages/index"
                ]
            },
            {
                "tab": "World App",
                "pages": [
                    "pages/world-app/index"
                ]
            },
            {
                "tab": "Mini Apps",
                "pages": [
                    {
                        "group": "Introduction",
                        "pages": [
                            "pages/mini-apps/index"
                        ]
                    }
                ]
            }
        ]
    },
    "navbar": {
        "primary": {
            "type": "button",
            "label": "Developer Portal",
            "href": "https://developer.worldcoin.org",
            "target": "_blank"
        }
    },
    "footer": {
        "socials": {
            "x": "https://x.com/tfh_technology",
            "linkedin": "https://www.linkedin.com/company/tools-for-humanity-corp",
            "github": "https://github.com/toolsforhumanity"
        }
    },
    "styling": {
        "eyebrows": "breadcrumbs"
    }
}